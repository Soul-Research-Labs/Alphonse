{
  "name": "@alphonse/extension",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --open --port 3000",
    "build": "vite build && bun run build:scripts",
    "build:scripts": "bun build src/extension/background.ts --outdir=dist --target=browser",
    "preview": "vite preview --port 5000",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@alphonse/core": "workspace:*",
    "@alphonse/storage": "workspace:*",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^6.0.2"
  },
  "devDependencies": {
    "@tanstack/react-router-devtools": "^1.132.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "webextension-polyfill": "^0.12.0"
  }
}
