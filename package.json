{
  "name": "alphonse",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun --filter '@alphonse/extension' dev",
    "build": "bun --filter '@alphonse/extension' build",
    "build:all": "bun --filter '*' build",
    "test": "bun --filter '*' test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check": "prettier --write . && eslint --fix ."
  },
  "devDependencies": {
    "@tanstack/eslint-config": "^0.3.0",
    "@types/bun": "^1.3.9",
    "@types/webextension-polyfill": "^0.12.4",
    "eslint": "^10.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.7.2"
  }
}
